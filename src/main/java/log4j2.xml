<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Appenders>
    <File name="fileAppender" fileName="myapp.log">
      <PatternLayout pattern="%d %-5p [%t] %c{2}: %m%n"/>
    </File>
  </Appenders>
  <Loggers>
    <Root level="debug">
      <AppenderRef ref="fileAppender"/>
    </Root>
  </Loggers>
</Configuration>
